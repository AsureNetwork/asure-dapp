<?xml version='1.0' encoding='utf-8'?>
<widget id="io.asure.dapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Asure</name>
    <description>
		Asure is an open decentralized autonomous insurance platform built around transparency, privacy and fairness, 
		powered by blockchain innovation that brings together individuals, companies and governments in a digital world.
        The Asure dApp is the reference implementation for dApps using the Asure protocol and platform.
    </description>
    <author email="info@asure.io" href="https://www.asure.io">
        Asure Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="https://dapp.asure.io" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon/android/icon-36-ldpi.png" />
        <icon density="mdpi" src="res/icon/android/icon-48-mdpi.png" />
        <icon density="hdpi" src="res/icon/android/icon-72-hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/icon-96-xhdpi.png" />
        <preference name="orientation" value="portrait" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="orientation" value="portrait" />
    </platform>
    <plugin name="cordova-plugin-camera" spec="^4.0.3" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <engine name="android" spec="^7.0.0" />
</widget>
